<% content_for(:title) {'Your Profile'} %>

<p>
  <strong>Lease:</strong>
  <%= @user.lease_id %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>User is in Roles:</strong>
  <ul>
    <% @user.roles.each do |role| %>
      <li>
        <%= role.name %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
