  <div class="field">
    <%= f.label :request_details %><br>
    <%= f.text_area :request_details, disabled: disable_open? %>
  </div>
  <div class="field">
    <%= f.label :request_response %><br>
    <%= f.text_area :request_response, disabled: disable_close? %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
